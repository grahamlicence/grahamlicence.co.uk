{{>site-header}}

    {{>sidebar}}

    <main class="main-content {{ this.page.class }}">
        <h1>{{ this.page.cartoonTitle }}</h1>
        {{#is this.page.cartoon 'true'  }}
        <img src="/assets/images/general/{{ this.page.cartoonImage }}" alt="{{ this.page.cartoonAlt }}" />
        {{/is}}
        {{> body}} 
    </main>
    
    <aside class="cartoons-list">
        <ul>
        {{#withSort cartoon 'data.posted'}}
          {{#each this.pages }}
            <li><a href="{{ replaceStr this.dest 'dist' '' }}">{{ this.data.cartoonTitle }}</a></li>
          {{/each}}
        {{/withSort}}
        </ul>
    </aside>

{{>site-footer}}