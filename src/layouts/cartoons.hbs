{{>site-header}}


    <main class="main-content">
    
        <nav class="cartoons-list">
            <ul class="sub-nav">
            {{#is this.page.group 'birdCartoon' }} 

                {{#each pages }}

                    {{#is data.group 'birdCartoon' }} 

                        {{#is data.title 'Bird Cartoons' }}
                        {{else}}
                            <li {{#if isCurrentPage}} class="active"{{/if}}>
                                {{#if ../../../production}}
                                <a href="{{ replaceStr this.dest 'dist' '' }}">{{ data.cartoonTitle }}</a>
                                {{else}}
                                <a href="{{ replaceStr this.dest 'dev' '' }}">{{ data.cartoonTitle }}</a>
                                {{/if}}
                            </li>
                        {{/is}}

                    {{/is}}

                {{/each}}

            {{/is}}

            {{#is this.page.group 'cartoons' }} 

                {{#each pages }}

                    {{#is data.group 'cartoons' }} 

                        {{#is data.title 'Cartoons' }}
                        {{else}}
                            <li {{#if isCurrentPage}} class="active"{{/if}}>
                                {{#if ../../../production}}
                                <a href="{{ replaceStr this.dest 'dist' '' }}">{{ data.cartoonTitle }}</a>
                                {{else}}
                                <a href="{{ replaceStr this.dest 'dev' '' }}">{{ data.cartoonTitle }}</a>
                                {{/if}}
                            </li>
                        {{/is}}

                    {{/is}}

                {{/each}}

            {{/is}}

            {{#is this.page.group 'insomniaCartoons' }} 

                {{#each pages }}

                    {{#is data.group 'insomniaCartoons' }} 

                        {{#is data.title 'Insomnia cartoons' }}
                        {{else}}
                            <li {{#if isCurrentPage}} class="active"{{/if}}>
                                {{#if ../../../production}}
                                <a href="{{ replaceStr this.dest 'dist' '' }}">{{ data.cartoonTitle }}</a>
                                {{else}}
                                <a href="{{ replaceStr this.dest 'dev' '' }}">{{ data.cartoonTitle }}</a>
                                {{/if}}
                            </li>
                        {{/is}}

                    {{/is}}

                {{/each}}

            {{/is}}

            </ul>
        </nav>
        
        {{#if this.page.cartoonTitle }}
        <h1>{{ this.page.cartoonTitle }}</h1>
        {{/if}}
        
        {{#page.cartoonImage }}
            <img src="/assets/images/{{ . }}" alt="{{ ../cartoonAlt }}" class="cartoon" />
        {{/page.cartoonImage }}

        {{> body}} 

    </main>
    
    {{>sidebar}}

{{>site-footer}}