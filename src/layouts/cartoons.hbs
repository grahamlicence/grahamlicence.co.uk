{{>site-header}}
    <aside class="cartoons-list">
        <ul>
        {{#withSort cartoon 'data.posted'}}
          {{#each this.pages }}
            <li><a href="{{ replaceStr this.dest 'dist' '' }}">{{ this.data.title }}</a></li>
          {{/each}}
        {{/withSort}}
        </ul>
    </aside>
    <main class="main-content {{ this.page.class }}">
        <h1>{{ this.page.cartoonTitle }}</h1>
        <img src="{{ this.page.cartoonImage }}" alt="{{ this.page.cartoonAlt }}" />
        {{> body}} 
    </main>

{{>site-footer}}